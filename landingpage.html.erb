    <script>
    // Theme Management System
    let currentTheme = localStorage.getItem('habitflow-theme') || 'light';
    
    // Apply theme on page load
    document.addEventListener('DOMContentLoaded', function() {
        applyTheme(currentTheme);
        updateThemeToggleIcon();
        
        const registerEmail = document.getElementById('registerEmail');
        const emailValidation = document.getElementById('emailValidation');
        
        if (registerEmail) {
            registerEmail.addEventListener('input', function() {
                const email = this.value;
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                
                if (emailRegex.test(email)) {
                    emailValidation.classList.remove('hidden');
                    this.classList.remove('border-error-500');
                    this.classList.add('border-success-500');
                } else {
                    emailValidation.classList.add('hidden');
                    this.classList.remove('border-success-500');
                    if (email.length > 0) {
                        this.classList.add('border-error-500');
                    }
                }
            });
        }
    });

    function toggleTheme() {
        currentTheme = currentTheme === 'light' ? 'dark' : 'light';
        localStorage.setItem('habitflow-theme', currentTheme);
        applyTheme(currentTheme);
        updateThemeToggleIcon();
    }

    function applyTheme(theme) {
        const html = document.documentElement;
        if (theme === 'dark') {
            html.classList.add('dark');
            document.body.className = 'bg-gray-900 min-h-screen dark';
        } else {
            html.classList.remove('dark');
            document.body.className = 'bg-gradient-to-br from-primary-50 via-background to-secondary-50 min-h-screen';
        }
    }

    function updateThemeToggleIcon() {
        const themeIcon = document.getElementById('themeIcon');
        if (themeIcon) {
            themeIcon.className = currentTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
        }
    }

    // Tab switching functionality
    function switchTab(tab) {
        const loginTab = document.getElementById('loginTab');
        const registerTab = document.getElementById('registerTab');
        const loginForm = document.getElementById('loginForm');
        const registerForm = document.getElementById('registerForm');

        if (tab === 'login') {
            loginTab.className = 'flex-1 py-3 px-4 text-sm font-medium rounded-lg transition-all duration-200 text-primary-600 bg-white shadow-soft';
            registerTab.className = 'flex-1 py-3 px-4 text-sm font-medium rounded-lg transition-all duration-200 text-text-secondary hover:text-text-primary';
            loginForm.classList.remove('hidden');
            registerForm.classList.add('hidden');
        } else {
            registerTab.className = 'flex-1 py-3 px-4 text-sm font-medium rounded-lg transition-all duration-200 text-primary-600 bg-white shadow-soft';
            loginTab.className = 'flex-1 py-3 px-4 text-sm font-medium rounded-lg transition-all duration-200 text-text-secondary hover:text-text-primary';
            registerForm.classList.remove('hidden');
            loginForm.classList.add('hidden');
        }
    }

    // Password visibility toggle
    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        const icon = input.nextElementSibling.querySelector('i');
        
        if (input.type === 'password') {
            input.type = 'text';
            icon.className = 'fas fa-eye-slash';
        } else {
            input.type = 'password';
            icon.className = 'fas fa-eye';
        }
    }

    // Mobile menu toggle with floating dropdown
    function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobileMenu');
        const isHidden = mobileMenu.classList.contains('hidden');
        
        if (isHidden) {
            mobileMenu.classList.remove('hidden');
            mobileMenu.classList.add('animate-in', 'slide-in-from-top-2', 'fade-in-0');
            setTimeout(() => {
                mobileMenu.classList.remove('animate-in', 'slide-in-from-top-2', 'fade-in-0');
            }, 200);
        } else {
            mobileMenu.classList.add('animate-out', 'slide-out-to-top-2', 'fade-out-0');
            setTimeout(() => {
                mobileMenu.classList.add('hidden');
                mobileMenu.classList.remove('animate-out', 'slide-out-to-top-2', 'fade-out-0');
            }, 200);
        }
    }

    // Form validation and submission
    function handleLogin(event) {
        event.preventDefault();
        showLoading();
        
        setTimeout(() => {
            hideLoading();
            window.location.href = 'dashboard_home.html';
        }, 1500);
    }

    function handleRegister(event) {
        event.preventDefault();
        showLoading();
        
        setTimeout(() => {
            hideLoading();
            showSuccessModal();
        }, 2000);
    }

    // Loading states
    function showLoading() {
        document.getElementById('loadingOverlay').classList.remove('hidden');
    }

    function hideLoading() {
        document.getElementById('loadingOverlay').classList.add('hidden');
    }

    // Success modal
    function showSuccessModal() {
        const modal = document.getElementById('successModal');
        const content = document.getElementById('modalContent');
        
        modal.classList.remove('hidden');
        setTimeout(() => {
            content.classList.remove('scale-95', 'opacity-0');
            content.classList.add('scale-100', 'opacity-100');
        }, 10);
    }

    function redirectToDashboard() {
        window.location.href = 'dashboard_home.html';
    }

    // Close modal on outside click
    document.getElementById('successModal').addEventListener('click', function(e) {
        if (e.target === this) {
            this.classList.add('hidden');
        }
    });
</script>
