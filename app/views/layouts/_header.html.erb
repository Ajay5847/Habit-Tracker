<nav x-data="{ open: false }" class="bg-white/80 backdrop-blur-sm border-b border-soft shadow-soft sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center space-x-3 cursor-pointer" do %>
        <i class="fa-solid fa-seedling text-primary-600 text-lg"></i>
        <span class="text-xl font-semibold text-text-primary">Habit Tracker</span>
      <% end %>
      
      <!-- Navigation Links - Centered group -->
      <div class="hidden md:flex items-center gap-6">
        <%= link_to "Dashboard", root_path, class: "px-4 py-2 rounded-lg text-text-secondary hover:text-primary-600 hover:bg-primary-50 transition-all duration-200" %>
        <%= link_to "Habits", habits_items_path, class: "px-4 py-2 rounded-lg text-text-secondary hover:text-primary-600 hover:bg-primary-50 transition-all duration-200" %>
        <a href="#" class="px-4 py-2 rounded-lg text-text-secondary hover:text-primary-600 hover:bg-primary-50 transition-all duration-200">Calendar</a>
      </div>
      
      <!-- User Actions -->
      <div class="hidden md:flex items-center">
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, method: :delete, class: "flex items-center px-4 py-2 rounded-lg text-text-secondary hover:text-red-600 hover:bg-red-50 transition-all duration-200", data: { turbo_method: :delete } do %>
            <i class="fas fa-sign-out-alt mr-2"></i>
            <span>Logout</span>
          <% end %>
        <% end %>
      </div>
      
      <!-- Mobile Menu Button -->
      <button @click="open = !open" class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200">
        <i x-show="!open" class="fas fa-bars text-text-primary"></i>
        <i x-show="open" class="fas fa-times text-text-primary"></i>
      </button>
    </div>
  </div>
  <!-- Mobile Menu -->
  <div x-show="open" class="md:hidden bg-white border-t border-soft" x-cloak>
    <div class="px-4 py-3 space-y-3">
      <%= link_to "Dashboard", root_path, class: "block text-text-secondary hover:text-primary-600 transition-colors duration-200" %>
      <a href="#" class="block text-text-secondary hover:text-primary-600 transition-colors duration-200">Habits</a>
      <a href="#" class="block text-text-secondary hover:text-primary-600 transition-colors duration-200">Calendar</a>
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete, class: "flex items-center text-text-secondary hover:text-red-600 transition-colors duration-200 mt-2", data: { turbo_method: :delete } do %>
          <i class="fas fa-sign-out-alt mr-2"></i>
          <span>Logout</span>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>