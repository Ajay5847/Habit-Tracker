<%= yield %>

<% flash.each do |type, message| %>
  <% next if %w[block_notice].include?(type) %>
  <%= turbo_stream.append "flash_messages",
        partial: "shared/flash_message",
        locals: {
          type: %w[alert error].include?(type) ? "alert" : "notice",
          message: message
        } %>
<% end %>

<% if content_for?(:modal_content) %>
  <%= turbo_stream.update "modal-content", content_for(:modal_content) %>
<% end %>
