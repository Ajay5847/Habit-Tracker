<%= form_with(model: habit_item || Habits::Item.new, url: habits_items_path, local: false) do |form| %>
  <div class="mb-4">
    <%= form.label :name, 'Habit Name', class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.label :description, 'Description', class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_area :description, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm' %>
  </div>
  <div class="flex justify-end">
    <%= form.submit 'Add Habit', class: 'btn-primary' %>
  </div>
<% end %>
