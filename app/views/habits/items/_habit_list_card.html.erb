<div 
  id="<%= dom_id(item) %>"
  class="habit-card bg-white rounded-2xl shadow-soft p-6 border border-gray-100" 
  data-tag-ids="<%= item.tag_ids.join(',') %>"
  data-name="<%= item.name.downcase %>"
  data-list="<%= item.list&.name&.downcase || '' %>">
  
  <div class="flex items-center justify-between gap-1">
    <div class="flex items-center space-x-4 flex-1">
      <!-- Habit Info -->
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-2 flex-wrap">
          <h3 class="text-lg font-semibold text-text-primary"><%= item.name %></h3>
          
          <!-- Tags -->
          <% if item.tags.any? %>
            <div class="flex items-center gap-2">
              <% item.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 bg-primary-100 text-primary-700 rounded-md text-xs font-medium">
                  <i class="fas fa-tag text-[10px] mr-1"></i><%= tag.name %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="flex items-center flex-wrap gap-x-4 gap-y-1 text-sm text-text-secondary">
          <% if item.list.present? %>
            <span class="flex items-center gap-1.5">
              <i class="fas fa-layer-group text-purple-600"></i>
              <span class="text-purple-600 font-medium"><%= item.list.name %></span>
            </span>
          <% end %>
          <span class="flex items-center gap-1.5">
            <i class="fas fa-calendar-day"></i>
            <span><%= item.frequency.titleize %></span>
          </span>
          <span class="flex items-center gap-1.5">
            <i class="fas fa-fire text-accent-500"></i>
            <span><%= item.current_streak || 0 %> day streak</span>
          </span>
          <% if item.target_value.present? %>
            <span class="flex items-center gap-1.5">
              <i class="fas fa-bullseye"></i>
              <span><%= item.target_value %></span>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center space-x-2">
      <!-- Edit -->
      <%= link_to edit_habits_list_item_path(item.list, item), class: "w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-400 transition", data: { turbo_stream: true } do %>
        <i class="fas fa-pen text-gray-600 text-sm"></i>
      <% end %>

      <!-- Delete -->
      <%= link_to habits_list_item_path(item.list, item),
        data: { turbo_method: :delete, turbo_stream: true, turbo_confirm: 'Are you sure you want to delete this habit?' },
        class: "p-2 w-8 h-8 bg-red-200 rounded-full flex items-center justify-center hover:bg-red-400 transition-all duration-200",
        title: "Delete" do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>