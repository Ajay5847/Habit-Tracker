<div
  id="<%= dom_id(item) %>"
  class="<%= habit_card_classes(item) %>">

  <!-- Action Buttons -->
  <% unless item.complete? %>
    <div class="absolute top-4 right-4 flex space-x-2">
      <!-- Mark Complete -->
      <%= button_to mark_complete_habits_list_item_path(item.list, item), method: :patch, class: "w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-white hover:bg-primary-600 transition", data: { turbo_stream: true } do %>
        <i class="fas fa-check text-sm"></i>
      <% end %>

      <!-- Edit -->
      <%= link_to edit_habits_list_item_path(item.list, item), class: "w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-400 transition", data: { turbo_stream: true } do %>
        <i class="fas fa-pen text-gray-600 text-sm"></i>
      <% end %>

      <!-- Delete -->
      <%= link_to habits_list_item_path(item.list, item),
        data: { turbo_method: :delete, turbo_stream: true, turbo_confirm: 'Are you sure you want to delete this habit?' },
        class: "w-8 h-8 bg-red-200 rounded-full flex items-center justify-center hover:bg-red-400 transition" do %>
        <i class="fas fa-trash text-sm"></i>
      <% end %>
    </div>
  <% end %>
  
  <!-- Header Section -->
  <div class="flex items-center space-x-3 mb-4">
    <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
      <i class="fas fa-seedling text-primary-600"></i>
    </div>
    <div>
  <h3 class="font-semibold text-lg text-text-primary">
        <%= item.name %>
      </h3>

      <% if item.list.present? %>
  <span class="inline-block px-2 py-0.5 mt-1 bg-primary-50 text-primary-700 text-xs rounded-full">
          <%= item.list.name %>
        </span>
      <% end %>
    </div>
  </div>

  <!-- Tags -->
  <% if item.tags.any? %>
    <div class="flex flex-wrap gap-2 mb-4">
      <% item.tags.each do |tag| %>
  <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded-full">
          <%= tag.name %>
        </span>
      <% end %>
    </div>
  <% end %>

  <!-- Frequency & Custom Days -->
  <div class="space-y-2 mb-4">
    <div class="text-sm text-gray-500">
      <span class="font-medium text-gray-700">Frequency:</span>
      <%= item.frequency.titleize %>
    </div>

    <% if item.custom? && item.selected_days.present? %>
      <div class="flex flex-wrap gap-1">
        <% item.selected_days.each do |day| %>
          <span class="text-xs px-2 py-0.5 bg-gray-100 text-gray-700 rounded-full">
            <%= day %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Progress Indicators -->
  <div class="space-y-3">
    <% if item.target_value.present? %>
      <div class="flex items-center justify-between">
        <span class="text-sm text-text-secondary">Target</span>
        <span class="text-sm font-medium text-text-primary">
          <%= item.target_value %>
        </span>
      </div>
    <% end %>

    <div class="pt-2">
      <% if item.complete? %>
        <div class="flex items-center space-x-2 text-success-600">
          <i class="fas fa-check-circle"></i>
          <span class="text-sm font-medium">
            Completed
          </span>
        </div>
      <% else %>
        <div class="flex items-center space-x-2 text-gray-400">
          <i class="fas fa-hourglass-half"></i>
          <span class="text-sm font-medium">Pending today</span>
        </div>
      <% end %>
    </div>
  </div>
</div>
