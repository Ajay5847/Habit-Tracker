<% if @item.destroyed? %>
  <%= turbo_stream.remove dom_id(@item) %>
  <%= turbo_stream.append("flash_messages", partial: "shared/flash_message", locals: { type: "notice", message: "Habit item was successfully destroyed." }) %>
<% else %>
  <%= turbo_stream.append("flash_messages", partial: "shared/flash_message", locals: { type: "error", message: "Something went wrong." }) %>
<% end %>