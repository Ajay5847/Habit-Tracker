<div x-ref="emptyState" class="<%= empty_habits ? '' : 'hidden' %> text-center py-16">
  <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
    <i class="fas fa-<%= empty_habits ? 'clipboard-list' : 'search' %> text-gray-400 text-2xl"></i>
  </div>
  <h3 class="text-xl font-semibold text-text-primary mb-2">
    <%= empty_habits ? 'No habits yet' : 'No habits found' %>
  </h3>
  <p class="text-text-secondary mb-6">
    <%= empty_habits ? 'Create your first habit to start tracking your progress!' : 'Try adjusting your search or filters, or create a new habit to get started.' %>
  </p>
  <% if empty_habits %>
    <%= link_to new_habits_list_item_path(current_user.default_list), class: 'inline-flex items-center bg-green-500 text-white px-6 py-3 rounded-xl font-medium hover:bg-green-600 transition-all duration-200', data: { turbo_stream: true } do %>
      <i class="fa fa-plus mr-2"></i>
      Create New Habit
    <% end %>
  <% else %>
    <button 
      @click="clearFilters()"
      class="bg-primary-600 text-white px-6 py-3 rounded-xl font-medium hover:bg-primary-700 transition-colors duration-200">
      Clear Filters
    </button>
  <% end %>
</div>