<!-- Streak Achievements -->
<div class="bg-white rounded-2xl shadow-soft p-6">
  <h3 class="text-lg font-semibold text-text-primary mb-4">Recent Achievements</h3>
  <div class="space-y-3">
    <% if true%>
      <div class="flex items-center space-x-3 p-3 bg-gradient-to-r from-primary-50 to-primary-100 rounded-lg">
        <div class="w-8 h-8 bg-primary-200 rounded-full flex items-center justify-center">
          <i class="fas fa-trophy text-primary-700 text-sm"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-primary-800">Keep it up!</p>
          <p class="text-xs text-primary-600">Track your progress</p>
        </div>
      </div>
    <% else %>
      <div class="text-center py-4">
        <p class="text-sm text-text-secondary">Start tracking habits to earn achievements!</p>
      </div>
    <% end %>
  </div>
</div>
