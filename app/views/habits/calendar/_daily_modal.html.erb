<!-- Daily Detail Modal (controlled by fullcalendar_controller.js) -->
<div id="calendar-daily-modal"
     class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
  
  <div class="bg-white rounded-2xl p-6 max-w-md w-full animate-fade-in">
    
    <div class="flex items-center justify-between mb-4">
      <h3 id="modal-date-string" class="text-lg font-semibold text-text-primary"></h3>
      <button id="modal-close-btn" 
              class="p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200">
        <i class="fas fa-times text-text-secondary"></i>
      </button>
    </div>
    
    <div class="space-y-4">
      <!-- Completed Habits -->
      <div>
        <h4 class="font-medium text-text-primary mb-2 flex items-center gap-2">
          <i class="fas fa-check-circle text-success-600"></i>
          Completed
        </h4>
        <div id="modal-completed-habits" class="space-y-2">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>
      
      <!-- Skipped Habits -->
      <div>
        <h4 class="font-medium text-text-primary mb-2 flex items-center gap-2">
          <i class="fas fa-ban text-warning-600"></i>
          Skipped
        </h4>
        <div id="modal-skipped-habits" class="space-y-2">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>
      
      <!-- Not Logged Habits (only visible for today) -->
      <div id="modal-not-logged-section">
        <h4 class="font-medium text-text-primary mb-2 flex items-center gap-2">
          <i class="fas fa-circle text-gray-400"></i>
          Not Logged
        </h4>
        <div id="modal-not-logged-habits" class="space-y-2">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .animate-fade-in {
    animation: fadeIn 0.2s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
