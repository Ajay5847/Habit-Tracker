<!-- Quick Actions -->
<div class="bg-white rounded-2xl shadow-soft p-6">
  <h3 class="text-lg font-semibold text-text-primary mb-4">Quick Actions</h3>
  <div class="space-y-3">
    <button onclick="document.querySelector('[data-controller~=fullcalendar]').fullcalendar.goToToday()"
            class="w-full bg-primary-50 hover:bg-primary-100 text-primary-700 py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2">
      <i class="fas fa-calendar-day"></i>
      <span>Go to Today</span>
    </button>
    
    <%= link_to habits_lists_path, class: "w-full bg-secondary-50 hover:bg-secondary-100 text-secondary-700 py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2" do %>
      <i class="fas fa-list"></i>
      <span>Manage Habits</span>
    <% end %>
    
    <button @click="$dispatch('export-calendar')" 
            class="w-full bg-accent-50 hover:bg-accent-100 text-accent-700 py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2">
      <i class="fas fa-download"></i>
      <span>Export Data</span>
    </button>
  </div>
</div>
